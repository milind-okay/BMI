<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/bmiL"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="4"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_bmi" tools:context=".MainBMI"
    android:background="#fff1f1">

    <RelativeLayout
        android:shape="rectangle"
        android:radius="10dp"
        android:id="@+id/bmiL1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ffffff">



    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:shape="rectangle"
        android:radius="10dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Kg"
                android:id="@+id/textView2"
                android:textStyle="bold|italic"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/bmi_data"
                android:id="@+id/text_2_part"
                android:textColor="#28f22b"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="is your Ideal weight."
                android:id="@+id/textView"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="40dp"
                android:textStyle="italic" /></RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="@dimen/finemargin">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_button"
                android:background="@drawable/info"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/target_button"
                android:background="@drawable/target"
                android:layout_marginTop="@dimen/finemargin"
                android:layout_marginBottom="@dimen/finemargin" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/risk_button"
                android:background="@drawable/alert_gree"
                />
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="84dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="90dp"
                android:id="@+id/imageView1"
                android:background="@drawable/male_blue"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/finemargin"
                android:layout_marginBottom="@dimen/finemargin"
                android:layout_marginTop="@dimen/finemargin"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="90dp"
                android:id="@+id/imageView2"
                android:background="@drawable/female_light"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:layout_marginLeft="@dimen/finemargin"
                android:layout_marginBottom="@dimen/finemargin"
                android:layout_marginTop="@dimen/finemargin"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignBottom="@+id/imageView1"
                android:background="@drawable/line"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="77dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                android:id="@+id/age_textview"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/age_display"
                android:layout_below="@+id/age_textview"
                android:layout_centerHorizontal="true"
                android:textColor="@color/underweight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Years"
                android:id="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/age_display"
                android:layout_marginTop="30dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView3"
                android:background="@drawable/line"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView7"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.14">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Weight"
                android:id="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weight_display"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:textColor="@color/underweight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Kg"
                android:id="@+id/textView9"
                android:layout_below="@+id/weight_display"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:background="@drawable/line"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Height"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/height_ft_display"
                    android:layout_below="@+id/height_in_display"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/bmi_data"
                    android:textColor="@color/underweight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ft"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/height_in_display"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView10"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/bmi_data"
                    android:textColor="@color/underweight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="in"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/height_in_display"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <ImageButton
                android:layout_width="31dp"
                android:layout_height="40dp"
                android:id="@+id/editImage"
                android:layout_alignRight="@+id/textView10"
                android:layout_alignEnd="@+id/textView10"
                android:background="@drawable/edit"
                android:layout_below="@+id/height_ft_display"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
